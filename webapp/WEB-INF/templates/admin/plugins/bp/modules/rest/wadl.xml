<?xml version="1.0"?>
	<application xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://wadl.dev.java.net/2009/02 wadl.xsd"
	xmlns:xsd="http://www.w3.org/2001/XMLSchema">
	    <resources base="${base_url}">
	        <resource path="project/{id}">
	            <method name="GET" >
	                <response>
	                    <representation mediaType="application/xml"/>
	                    <representation mediaType="application/json"/>
	                </response>
	            </method>
	        </resource>
	        <resource path="">
	            <method name="POST" >
	                <request>

	                    <representation mediaType="application/x-www-form-urlencoded">
	                        <param name="name" type="xsd:string" style="query" required="true"/>
	                        <param name="description" type="xsd:string" style="query" required="true"/>
	                        <param name="id_project" type="xsd:int" style="query" required="true"/>	                      
	                        <param name="cout" type="xsd:int" style="query" required="true"/>
	                        <param name="ImageUrl" type="xsd:string" style="query" required="true"/>
	                          </representation>
	                </request>
	            </method>
	        </resource>
	    </resources>
	</application>